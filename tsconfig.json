{
  "compilerOptions": {
    "target": "es6",
    "module": "umd",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["dom", "es2015"],
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"                      // Exclude the "node_modules" directory
  ]
}
